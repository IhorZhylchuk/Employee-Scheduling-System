@model SecureIdentity.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    int rowN = 0;


}

<form method="get" asp-controller="Account" asp-action="Index">
    <div class="input-group">
      
            <input class="form-control" asp-for="SearchString" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
       
    </div>
</form>
<br/>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
            </tr>
        </thead>

        @foreach (var user in Model.Users)
        {
            <tbody>
                <tr>
                   
                        <th scope="row">@{rowN++;}@rowN</th>
                    
                    
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Details" asp-controller="Account" asp-route-id="@user.Id">Подробнее</a>
                        <a asp-action="Edit" asp-controller="Account" asp-route-id="@user.Id">Изменить</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">                      
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
}
    </table>
   
